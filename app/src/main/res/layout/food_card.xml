<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:id="@+id/image_food"
                android:src="@drawable/noimage"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/nama_makanan"
                android:layout_height="wrap_content"
                android:text="Nama Makanan"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/image_food"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@+id/image_food"/>

            <TextView
                android:id="@+id/desc_makanan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Deskripsi tentang makanan ini. Apa saja bahan dan semua tentang makanan ini"
                android:layout_toRightOf="@id/image_food"
                android:layout_alignLeft="@id/nama_makanan"
                android:layout_below="@+id/nama_makanan"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rupiah"
                android:text="Rp "
                android:layout_toRightOf="@id/image_food"
                android:layout_alignLeft="@id/nama_makanan"
                android:layout_alignBottom="@id/image_food"/>

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000"
                android:layout_toRightOf="@+id/rupiah"
                android:layout_alignBottom="@+id/rupiah"
                android:layout_marginLeft="5dp"
                />

        </RelativeLayout>

</android.support.v7.widget.CardView>





